{% block script %}
<script src="{{ asset('taverne/plugins/ekko-lightbox/ekko-lightbox.min.js') }}"></script>
<script src="{{ asset('taverne/plugins/masonry/imagesloaded.pkgd.min.js') }}"></script>
<script src="{{ asset('taverne/plugins/masonry/masonry.pkgd.min.js') }}"></script>
<script>
(function($) {
"use strict";
	// Masonry
	var $container = $('.masonry');
	$($container).imagesLoaded( function(){
		$($container).masonry({
			itemSelector: '.masonry-item', 
			columnWidth: '.masonry-item'
		});
	});
		
	// Lightbox
	$(document).delegate('*[data-toggle="lightbox"]', 'click', function(event) { 
		event.preventDefault(); 
		$(this).ekkoLightbox();
	}); 

	// Filter
	var $filter = $('.filter a').click(function(e) {
		e.preventDefault();
		var id = $(this).attr("href");
		if (id == '#all') {
			$('.masonry-item').removeClass('faded');
		} else {
			var $el = $(id).removeClass('faded');
			$('.masonry-item').not($el).addClass('faded');
		}
		$filter.removeClass('active');
		$(this).addClass('active');
	});
})(jQuery);
</script>
